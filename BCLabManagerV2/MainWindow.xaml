<Window x:Class="BCLabManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:BCLabManager.View"
        WindowStartupLocation="CenterScreen"
        Title="BC Lab Manager v0.1.2" Height="855" Width="1600">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <TabControl x:Name="MainTab">
            <TabItem Header="Dashboard">
                <v:DashBoardView x:Name="DashBoardViewInstance"></v:DashBoardView>
            </TabItem>
            <TabItem Header="Assets">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="20*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="60*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Battery Types" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                        <v:AllBatteryTypesView x:Name="AllBatteryTypesViewInstance"></v:AllBatteryTypesView>
                    </GroupBox>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"></RowDefinition>
                            <RowDefinition Height="4"></RowDefinition>
                            <RowDefinition Height="50*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Projects" BorderBrush="Black" BorderThickness="1">
                            <v:AllProjectsView x:Name="AllProjectsViewInstance"></v:AllProjectsView>
                        </GroupBox>
                        <GroupBox Header="Testers" Grid.Row="2" BorderBrush="Black" BorderThickness="1">
                            <v:AllTestersView x:Name="AllTestersViewInstance"></v:AllTestersView>
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Batteries" Grid.Row="0" BorderBrush="Black" BorderThickness="1">
                            <v:AllBatteriesView x:Name="AllBatteriesViewInstance"></v:AllBatteriesView>
                        </GroupBox>
                        <GroupBox Header="Channels" Grid.Row="2" BorderBrush="Black" BorderThickness="1">
                            <v:AllChannelsView x:Name="AllChannelsViewInstance"></v:AllChannelsView>
                        </GroupBox>
                        <GroupBox Header="Chambers" Grid.Row="4" BorderBrush="Black" BorderThickness="1">
                            <v:AllChambersView x:Name="AllChambersViewInstance"></v:AllChambersView>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Templates">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="29*"></ColumnDefinition>
                        <ColumnDefinition Width="589*"/>
                        <ColumnDefinition Width="16*"></ColumnDefinition>
                        <ColumnDefinition Width="952*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.ColumnSpan="2">
                        <!--<Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>-->
                        <!--<v:AllChargeCurrentsView x:Name="AllChargeCurrentsViewInstance" Grid.Row="1"></v:AllChargeCurrentsView>-->
                    </Grid>
                    <v:AllStepTemplatesView Grid.Column="0" x:Name="AllStepTemplateViewInstance" Grid.ColumnSpan="2"></v:AllStepTemplatesView>
                    <v:AllRecipeTemplatesView Grid.Column="3" x:Name="AllRecipeTemplatesViewInstance"></v:AllRecipeTemplatesView>
                </Grid>
            </TabItem>
            <TabItem Header="Open Programs">
                <v:AllProgramsView x:Name="AllProgramsViewInstance"></v:AllProgramsView>
            </TabItem>
            <TabItem Header="Products(v0.1)">
                <v:AllProductsView x:Name="AllProductsViewInstance"></v:AllProductsView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
